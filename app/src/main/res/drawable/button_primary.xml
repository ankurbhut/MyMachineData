<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/blackAlpha5">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_13sdp" />
            <solid android:color="@color/colorTertiaryLight" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/_1sdp"
        android:end="@dimen/_1sdp"
        android:start="@dimen/_1sdp"
        android:top="@dimen/_1sdp">
        <selector>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/_12sdp" />
                    <gradient
                        android:angle="90"
                        android:endColor="@color/colorTertiaryLight"
                        android:startColor="@color/colorTertiaryLight" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/_12sdp" />
                    <gradient
                        android:angle="90"
                        android:endColor="@color/colorTertiary"
                        android:startColor="@color/colorTertiaryVariant" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>