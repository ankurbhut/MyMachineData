<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_10sdp" />
            <stroke android:width="@dimen/_1sdp" android:color="#4E4D4D" />
            <gradient android:angle="90" android:endColor="@color/colorTertiaryLight" android:startColor="@color/colorTertiaryLight" />
        </shape>
    </item>
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_10sdp" />
            <solid android:color="@android:color/transparent" />
            <stroke android:width="@dimen/_1sdp" android:color="@color/colorSecondary" />
        </shape>
    </item>
</selector>