<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- Styles for Bottom Sheet Dialog  -->
    <style name="BottomSheetModal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/BottomSheetModal</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">#0F1013</item>
    </style>



    <style name="App.BottomNavigationView.TextAppearance.Active" parent="Widget.Material3.BottomNavigationView">
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="ProgressBar.Horizontal" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">@dimen/_125sdp</item>
        <item name="android:layout_height">@dimen/_8sdp</item>
        <item name="android:background">@drawable/rounded_corner_white</item>
        <item name="android:backgroundTint">@color/colorTertiaryLight</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/colorTertiary</item>
        <item name="android:max">100</item>
        <item name="android:paddingStart">@dimen/_4sdp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingEnd">@dimen/_4sdp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:progress">40</item>
    </style>

    <style name="TextAppearance.Input.TextInputLayout.HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textColor">@color/colorTextHint</item>
        <item name="android:letterSpacing">0.10</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="TextAppearance.Input.TextInputLayout.Error" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:letterSpacing">0.10</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="Widget.Input.TextInputEditText.Multiline" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:letterSpacing">0.10</item>
        <item name="android:minLines">3</item>
        <item name="android:maxLines">5</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">textCapWords|textMultiLine</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.Input.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:letterSpacing">0.10</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:minHeight">@dimen/_32sdp</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:background">@drawable/edit_text_selector</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="Widget.Input.EditText.Multiline" parent="Widget.Input.EditText">
        <item name="android:maxLines">8</item>
        <item name="android:minLines">5</item>
        <item name="android:lines">12</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:gravity">start</item>
        <item name="android:singleLine">false</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:background">@drawable/edit_text_multiline_selector</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/activity_fade_in</item>
        <item name="android:windowExitAnimation">@anim/activity_fade_out</item>
    </style>

    <!-- Button Styling  -->

    <style name="Widget.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minHeight">@dimen/_35sdp</item>
        <item name="android:minWidth">@dimen/_120sdp</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:paddingTop">@dimen/_3sdp</item>
        <item name="android:paddingBottom">@dimen/_3sdp</item>
        <item name="android:paddingStart">@dimen/_7sdp</item>
        <item name="android:paddingEnd">@dimen/_7sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:letterSpacing">0.10</item>
        <item name="android:lineSpacingExtra">@dimen/_minus3sdp</item>
        <item name="backgroundTint">@null</item>
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Widget.Button.Secondary" parent="Widget.Button.Primary">
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0.55</item>
        <item name="android:background">@drawable/button_secondary</item>
    </style>

    <style name="Widget.Button.Icon" parent="Widget.Button.Primary">
        <item name="iconGravity">start</item>
        <item name="iconTint">@null</item>
        <item name="iconSize">@dimen/_22sdp</item>
        <item name="iconPadding">@dimen/_7sdp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
    </style>

    <!-- Shape appearance-->
    <style name="Widget.Tab.Text.Appearance" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="tabGravity">center</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedCorner8" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_8sdp</item>
    </style>

    <style name="RoundedCorner4" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_4sdp</item>
    </style>

    <style name="RoundedCorner10" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_10sdp</item>
    </style>

    <style name="RoundedCorner12" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_12sdp</item>
    </style>

    <style name="RoundedCorner15" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_15sdp</item>
    </style>

    <style name="RoundedCorner20" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_20sdp</item>
    </style>



    <style name="TextViewShadow">
        <item name="android:shadowColor">@color/colorTextShadow</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
    </style>



    <style name="Theme.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabGravity">fill</item>
        <item name="android:fillViewport">true</item>
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>
</resources>